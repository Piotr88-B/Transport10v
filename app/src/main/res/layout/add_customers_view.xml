<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_marginHorizontal="20dp"
    android:orientation="horizontal">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Klient indywidualny:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-160dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint=" Imie "
            android:inputType="textPersonName"
                android:paddingStart="10dp"/>

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint="Nazwisko"
            android:inputType="textPersonName"

            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-310dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint=" Numer telefonu"
            android:inputType="phone"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/editTextMiejscowosc"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-310dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint=" Miejscowość"
            android:inputType="textPersonName"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/editTextpostcode"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint="Kod pocztowy"
            android:inputType="textPersonName"

            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/editTextUlica"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-310dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint=" Ulica"
            android:inputType="textPersonName"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/editTextUlicaNr"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint=" Numer"
            android:inputType="number"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-240dp"
            android:layout_marginTop="240dp"
            android:text="Termin dostawy: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText

            android:id="@+id/editTextDate"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-140dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint=" Data"
            android:inputType="date"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/editTextod"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint=" od"
            android:inputType="number"
            android:paddingStart="10dp" />

        <TextView

            android:id="@+id/textView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="280dp"
            android:text=" - "
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextdo"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint=" do"
            android:inputType="number"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-310dp"
            android:layout_marginTop="320dp"
            android:text="Numer paragonu:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextParagon"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-145dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/item_insert"
            android:ems="10"
            android:hint=" data/nr sklepu/nr kasy/nr paragonu"
            android:inputType="textPersonName"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_marginStart="-330dp"
            android:layout_marginTop="420dp"
            android:layout_height="1dp"/>


        <ImageView
            android:id="@+id/ImageCustomersTemplet"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-30dp"
            android:src="@drawable/ic_close"
            />



    </LinearLayout>